# Server Configuration
PORT=10000
NODE_ENV=development

# Frontend URL
FRONTEND_URL=https://algo-three-red.vercel.app

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=24h

# Zerodha Kite Connect API Configuration
ZERODHA_API_KEY=your-zerodha-api-key-from-kite-connect
ZERODHA_API_SECRET=your-zerodha-api-secret-from-kite-connect

# Database Configuration (for future use)
DATABASE_URL=postgresql://username:password@localhost:5432/ai_trading_db
REDIS_URL=redis://localhost:6379

# External APIs for Market Data
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
YAHOO_FINANCE_ENABLED=true
QUANDL_API_KEY=your-quandl-api-key

# AI Model Configuration
AI_MODEL_URL=http://localhost:8000
AI_MODEL_API_KEY=your-ai-model-api-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourapp.com

# Trading Configuration
MAX_POSITION_SIZE=100000
DEFAULT_STOP_LOSS_PERCENT=5
DEFAULT_TAKE_PROFIT_PERCENT=10
RISK_PER_TRADE_PERCENT=2

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
TRADING_RATE_LIMIT_PER_MINUTE=10

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-change-this

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Cron Jobs
MARKET_DATA_SYNC_ENABLED=true
PORTFOLIO_SYNC_INTERVAL=5
BACKUP_INTERVAL=60

# Features Flags
ENABLE_PAPER_TRADING=true
ENABLE_REAL_TRADING=false
ENABLE_AI_SIGNALS=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true